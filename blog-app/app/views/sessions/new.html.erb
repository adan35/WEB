<div class="row">
  <div class="col-md-12">
    <%= form_for :session, :url => login_path do |f| %>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :email, class: 'form-control', placeholder: 'enter email'  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :password, class: 'form-control', placeholder: 'enter password'  %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit "Login", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
  </div>
</div>