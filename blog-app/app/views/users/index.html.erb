<h1 class="mt-3 mb-4">All Alpha Bloggers</h1>
<div class="pagination-center">
  <%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
<% @users.each do |user| %>
  <div class="card">
    <div class="card-body px-4 py-4">
        <%= link_to gravatar_for(user), user_path(user) %>
        <span class="ml-3">
          <%= link_to user.username, user_path(user), class: 'card-title' %>
        </span>
          <div class="small col-sm-2"><small><%= pluralize(user.articles.count, "article") if user.articles %></small></div> 
    </div>
  </div>
<% end %>
<div class="pagination-center">
  <%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>