<div class="container">
  <div class="row">
    <div class="col-sm-10 col-xs-offset-1">
      <% flash.each do |type, msg| %>
        <div class='alert alert-warning'>
          <a href="#" class="close" data-dismiss="alert" role="alert">&times;</a>
          <%= content_tag :div, msg, :id => "flash" if msg.is_a?(String) %>
        </div>
        <% end %>
    </div>
  </div>
</div>